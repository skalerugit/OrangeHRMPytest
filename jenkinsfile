pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t orangehrm-demo-app:$BUILD_NUMBER ."
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh "docker run orangehrm-demo-app:$BUILD_NUMBER"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}