pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t orangehrm-demo-app:$BUILD_NUMBER ."
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh "docker run orangehrm-demo-app:$BUILD_NUMBER"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo 'deploying the application...'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'SECRET', usernameVariable: 'USER')]) {
                    sh "echo $SECRET | docker login -u $USER --password-stdin"
                    sh "docker push skalerudocker/orangehrm-demo-app:$BUILD_NUMBER"
            }
        }
    }
}
}
