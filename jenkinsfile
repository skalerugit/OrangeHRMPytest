pipeline {
    agent any
    
    environment {
    DOCKER_REGISTRY = "docker.io"
    DOCKERHUB_USERNAME = credentials('dockerhub-username')
    DOCKERHUB_PASSWORD_FILE = credentials('dockerhub-password-file')
    DOCKER_IMAGE_NAME = "orangehrm-demo-app"
    DOCKER_IMAGE_TAG = $BUILD_NUMBER
    }

    stages {
        stage('Build Docker image') {
      steps {
        sh 'docker build -t "${DOCKER_REGISTRY}/${DOCKERHUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}" .'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh "docker run orangehrm-demo-app:$BUILD_NUMBER"
            }
        }
        stage('Deploy') {
            steps {
            withCredentials([file(credentialsId: "${DOCKERHUB_PASSWORD_FILE}", variable: 'DOCKERHUB_PASSWORD')]) {
                    sh "docker login -u \${DOCKERHUB_USERNAME} -p $(cat ${DOCKERHUB_PASSWORD}) ${DOCKER_REGISTRY}"
                    sh "docker push ${DOCKER_REGISTRY}/${DOCKERHUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
            }
            }
            
        }
    }
}
